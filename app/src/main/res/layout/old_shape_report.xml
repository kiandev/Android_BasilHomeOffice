<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/shape_report_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <ProgressBar
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/shape_report_pb"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:padding="15dp"/>

            <ImageView
                android:id="@+id/shape_report_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:visibility="visible"/>

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:id="@+id/lineview"
                android:layout_toLeftOf="@+id/shape_report_image"
                android:background="@color/colorGray200"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/lineview"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:gravity="right">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/shape_report_name"
                    android:text="نام کارشناس"
                    android:fontFamily="@font/yekanregular"
                    android:textColor="@color/colorGray500"
                    android:textSize="12sp"
                    android:gravity="right"
                    android:layout_gravity="right"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/shape_report_text"
                    android:text="متن گزارش"
                    android:fontFamily="@font/yekanmedium"
                    android:textColor="@color/colorGray700"
                    android:textSize="13sp"
                    android:lineSpacingExtra="9sp"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:layout_gravity="right"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/shape_report_date"
                    android:text="تاریخ گزارش"
                    android:fontFamily="@font/yekanregular"
                    android:textColor="@color/colorGray500"
                    android:textSize="12sp"
                    android:layout_marginTop="7dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:gravity="left"
                    android:layout_gravity="left"/>

            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>