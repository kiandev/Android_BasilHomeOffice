<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.PSh_Contact"
    android:orientation="vertical"
    android:background="@color/colorGray200">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:text="اطلاعات تماس"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/yekanmedium"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="7dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp"
            android:onClick="psh_contact_btnmobileclick">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@android:color/white">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/cellphone_icon"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:padding="6dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="شماره موبایل :"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/yekanregular"
                    android:textColor="@color/colorGray500"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/psh_contact_mobiletxt"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/yekanregular"
                    android:textColor="@color/colorGray800"
                    android:textSize="14sp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp"
            android:onClick="psh_contact_btntelclick">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@android:color/white">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/tel_icon"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="شماره تلفن :"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/yekanregular"
                    android:textColor="@color/colorGray500"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/psh_contact_teltxt"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/yekanregular"
                    android:textColor="@color/colorGray800"
                    android:textSize="14sp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="7dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp"
            android:onClick="psh_contact_btnemailclick">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@android:color/white">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/envelope_icon"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:padding="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ایمیل :"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/yekanregular"
                    android:textColor="@color/colorGray500"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/psh_contact_emailtxt"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/yekanregular"
                    android:textColor="@color/colorGray800"
                    android:textSize="13sp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp"
            android:onClick="psh_contact_btnsiteclick">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@android:color/white">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/website_icon"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:padding="7dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="سایت :"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/yekanregular"
                    android:textColor="@color/colorGray500"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/psh_contact_sitetxt"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/yekanregular"
                    android:textColor="@color/colorGray800"
                    android:textSize="13sp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</LinearLayout>