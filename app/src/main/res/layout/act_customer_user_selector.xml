<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray200"
    android:orientation="vertical"
    tools:context=".activity.Customer_User_Selector">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:text="انتخاب مشتری"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:gravity="right|center"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/yekanmedium"
            android:layout_toLeftOf="@+id/customer_user_selector_back"/>

        <ImageView
            android:id="@+id/customer_user_selector_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:padding="12dp"
            android:src="@drawable/back"
            android:layout_marginRight="10dp"
            android:onClick="customer_user_selector_back_click"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/customer_user_selector_cv"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            shimmer:cardBackgroundColor="@android:color/white"
            shimmer:cardCornerRadius="5dp"
            shimmer:cardElevation="2dp"
            android:onClick="customer_user_selector_cv_click">

            <android.support.v7.widget.SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                shimmer:iconifiedByDefault="true"
                android:id="@+id/customer_user_selector_searchview">

            </android.support.v7.widget.SearchView>

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/customer_user_selector_nodata"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="50dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/nodata"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="اطلاعاتی موجود نیست"
                android:textSize="16sp"
                android:textColor="@color/colorGray800"
                android:gravity="center"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorGray700"
            android:lineSpacingExtra="9dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="جهت نوشتن یادداشت برای هر مشتری روی دکمه هر کدام کلیک نمایید ، همچنین به منظور ویرایش اطلاعات هر کدام پس از کلیک دست خود را روی آن نگه دارید"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/customer_user_selector_rv"
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:layout_height="match_parent"
            android:visibility="visible"/>

    </LinearLayout>

</LinearLayout>